<form method="post" action="{{ path('calendrier_delete', {'id': calendrier.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le rendez-vous?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ calendrier.id) }}">
    <button class="btn">Supprimer</button>
</form>
