{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<section>
    <p class="fildar">Immo-Dev / <a href="{{path("home")}}">accueil /</a><span class="span"> connexion</span></p>
    <div class="conteneur_connexion">
        <div class="connexion">
            <p class="parconnexion">Vous tentez d'accéder à un contenu qui nécessite que vous soyez connecté(e).</p>
            <h1><img src="images/fleche_bas.png" alt="fleche bas">Se connecter</h1>
            <form action="{{path("app_login")}}" method="POST" class="bloc_connexion">
                <input type="email" placeholder="Email" name="email" required>
                <input type="password" placeholder="Mot de passe" name="password" required >
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="hidden" name="_target_path" value="{{ path('espaceagent') }}"/>
                <input type="submit" id='submit' value='LOGIN' >
            </form>
        </div>
        <span class="span2"></span>
        <div class="creation_compte">
            <h2>Vous n'avez pas de compte?</h2>
            <button class="switchbutton" type="button">Créer un compte</button>
        </div>
    </div>
    {# <div id="form_button"> #}
        <div class="formulaire">
        {{ form_start(form) }}
        {{ form_start(formuser) }}
            {{ form_widget(form.nom) }}
            {{ form_errors(form.nom)}}
            {{ form_widget(form.prenom) }}
            {{ form_widget(form.adresse) }}
            {{ form_widget(form.ville) }}
            {{ form_widget(form.cp) }}
            {{ form_widget(form.tel) }}
            {{ form_widget(formuser.email) }}
            {{ form_widget(formuser.password) }}
            <input type="submit" value="S'inscrire" class="inscription">
            {{ form_rest(formuser) }}
        {{ form_end(form) }}
    </div>
    </div>
    <script src="js/button_showform.js"></script><!-- utilisation de js pour faire apparaître le formulaire -->
</section>

{% endblock %}